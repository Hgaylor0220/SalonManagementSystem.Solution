@using SalonManagementSystem.Models;
@model List<SalonManagementSystem.Models.Stylist>;

<div class ="jumbotron">
<h1>Your Stylist</h1>
</div>
@if (@Model.Count == 0)
{
  <h3>No stylist have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add New Stylist","Create")</p>
<p>@Html.ActionLink("Add a Client", "Create", "CLients")</p>
